<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/light_blue"
    android:paddingTop="10dp">

    <RelativeLayout
        android:id="@+id/llContainer"
        android:orientation="vertical"
        android:background="@color/light_blue"
        android:layout_width="match_parent"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/dateLayout"
            android:padding="5dp"
            android:gravity="center"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:orientation="vertical"
            android:background="@drawable/layout_corners_blue">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12 Jan 2018"
                android:gravity="center"
                android:id="@+id/time"
                android:padding="5dp"
                android:textSize="15sp"
                android:textColor="@color/white" />
        </LinearLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/upLayout"
            android:layout_marginBottom="3dp"
            android:layout_toRightOf="@id/dateLayout">
            <TextView
                android:id="@+id/duedate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:textSize="13sp"
                android:textStyle="bold"
                android:textColor="@color/oil" />
            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:textSize="18sp"
                android:ellipsize="end"
                android:maxLines="2"
                android:layout_toLeftOf="@id/duedate"
                android:layout_marginRight="5dp"
                android:textColor="@color/oil"
                android:text="title" />

        </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/description"
            android:layout_below="@id/upLayout"
            android:textColor="@color/white"
            android:maxLines="2"
            android:ellipsize="end"
            android:text="Description"
            android:layout_toRightOf="@id/dateLayout"/>

    </RelativeLayout>

<View
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:background="@color/divider_color1"
    android:layout_marginTop="10dp"/>
</LinearLayout>