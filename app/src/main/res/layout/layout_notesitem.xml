<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llContainer"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="3"
    android:paddingBottom="5dp"
    android:paddingTop="5dp">
    <ImageView
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:background="@drawable/layout_corners_light_grey"
        android:padding="8dp"
        android:src="@drawable/girl"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="10dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:id="@+id/modifyButton"
                android:layout_alignParentRight="true"
                android:layout_gravity="center_vertical"
                android:src="@drawable/more"/>
            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:layout_alignParentLeft="true"
                android:layout_toLeftOf="@id/modifyButton"
                android:textSize="18sp"
                android:textColor="@color/oil"
                android:maxLines="2"
                android:ellipsize="end"
                android:gravity="center_vertical"/>


        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/traitsLabel"
                android:textColor="@color/primary"
                android:text="Traits: "
                android:textSize="16sp"
                android:layout_alignParentLeft="true"/>
            <TextView
                android:id="@+id/status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_toRightOf="@id/traitsLabel"
                android:textColor="@color/description_color"
                android:gravity="center_vertical" />
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/reason"
            android:textSize="14sp"
            android:minLines="2"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="@color/description_color"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider_color2"/>
    </LinearLayout>
</LinearLayout>
